#$ -N simulation
#$ -e e_$JOB_NAME
#$ -o o_$JOB_NAME
#$ -S /bin/bash
#$ -q wilke
#$ -m beas
source ~/.bashrc

# define files, variables used in analysis
DATA=$1
TREEFILE=n512_bl0.5.tre

REPODIR=$HOME/mutsel_benchmark
SCRIPTDIR=$REPODIR/scripts/simulation
OUTDIR=$REPODIR/data

# create and enter working directory
WDIR=/state/partition1/sjs3495/$JOB_NAME-$JOB_ID
mkdir -p $WDIR
cd $WDIR

# copy files
cp $OUTDIR/$TREEFILE .
cp $SCRIPTDIR/true_simulation_parameters/${DATA}_true_aa_fitness.txt fitfile.txt
cp $SCRIPTDIR/simulate_yeast_alignments.py .

# python
module load python
export PYTHONPATH=$HOME/bin/lib/python2.7/site-packages

# Simulate
python simulate_yeast_alignments.py $DATA fitfile.txt $TREEFILE 

# Save, cleanup
mkdir -r $OUTDIR
cp *.phy $OUTDIR
rm -r $WDIR
