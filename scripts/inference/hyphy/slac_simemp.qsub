#$ -N slac_simemp
#$ -e e_$JOB_NAME
#$ -o o_$JOB_NAME
#$ -S /bin/bash
#$ -q wilke
#$ -m beas
#$ -pe serial 16
source ~/.bashrc


REPODIR=$HOME/mutsel_benchmark

# define files, variables used in analysis
CPU=16
DATA=$1
OUTFILE=$REPODIR/results/${DATA}_simulated_SLAC.txt

# create and enter working directory
WDIR=/state/partition1/sjs3495/$JOB_NAME-$JOB_ID
mkdir -p $WDIR
cd $WDIR

# copy files, hyphy executable here
cp $REPODIR/data/simulated_from_empirical/${DATA}_simulated.fasta temp.fasta
cp $REPODIR/data/empirical/$DATA.tre temp.tre
cp $REPODIR/scripts/inference/hyphy/autoSLAC.bf .
cp -r $REPODIR/scripts/inference/hyphy/batchfiles/* .
cp $HOME/bin/bin/HYPHYMP .

sed -i "s@placeholder@$WDIR@g" autoSLAC.bf
./HYPHYMP CPU=$CPU autoSLAC.bf

sed -i "s/ //g" slac.txt
cp slac.txt $OUTFILE

rm -r $WDIR

